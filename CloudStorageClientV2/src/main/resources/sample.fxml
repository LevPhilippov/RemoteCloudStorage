<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<VBox fx:controller="Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center" >
    <HBox>
        <Text fx:id="serverStatusField" text="disconnected" HBox.hgrow="ALWAYS"/>
    </HBox>
    <HBox alignment="TOP_CENTER">
        <VBox HBox.hgrow="ALWAYS">
            <Button text="Server" disable="true" minWidth="200" />
            <ListView fx:id="serverListView"/>
        </VBox>
        <VBox HBox.hgrow="ALWAYS">
            <Button text="Client" disable="true" minWidth="200"/>
            <ListView fx:id="localListView" HBox.hgrow="ALWAYS"/>
        </VBox>
    </HBox>
    <HBox>
        <Button fx:id="syncButton" text="Sync" HBox.hgrow="ALWAYS" minWidth="300" onAction="#synchronize"/>
        <Button fx:id="echoButton" text="Sync" HBox.hgrow="ALWAYS" minWidth="100" onAction="#echo"/>
    </HBox>
</VBox>