<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<VBox fx:controller="com.filippov.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center" >
<!--    <Text fx:id="serverConnectionStatus" text="You are ofline"  textAlignment="CENTER"/>-->
    <HBox >
        <VBox HBox.hgrow="ALWAYS">
<!--            <Button fx:id="serverFolder" text="" disable="true" minWidth="1000"/>-->
            <ListView fx:id="serverListView" />
        </VBox>
        <VBox HBox.hgrow="ALWAYS">
<!--            <Button fx:id="localFolder" text="root" disable="true" minWidth="1000"/>-->
            <ListView fx:id="localListView" />
        </VBox>
    </HBox>
    <HBox>
        <Button fx:id="syncButton" text="Push" HBox.hgrow="ALWAYS" minWidth="100" onAction="#synchronize"/>
        <Button fx:id="connectButton" text="Connect" HBox.hgrow="ALWAYS" minWidth="100" onAction="#connect"/>
        <Button fx:id="disconnectButton" text="Disconnect" HBox.hgrow="ALWAYS" minWidth="100" onAction="#disconnest"/>
        <Button fx:id="getFIlesButton" text="Pull" HBox.hgrow="ALWAYS" minWidth="100" onAction="#requestFile"/>
    </HBox>
</VBox>